<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:FleetManager.ViewModels"
    x:Class="FleetManager.Views.InscriptionView"
    x:DataType="vm:InscriptionViewModel"
    Background="#f0f2f5">

        <!-- ⭐ STYLES LOCAUX POUR CETTE PAGE ⭐ -->
        <UserControl.Styles>

            <!-- Style de base pour toutes les TextBox -->
            <Style Selector="TextBox">
                <Setter Property="Background" Value="#f3f4f6"/>      <!-- gris clair -->
                <Setter Property="BorderBrush" Value="#d1d5db"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Foreground" Value="#111827"/>      <!-- texte presque noir -->
            </Style>

            <!-- TextBox au SURVOL -->
            <Style Selector="TextBox:pointerover">
                <Setter Property="Background" Value="#e5e7eb"/>      <!-- gris un peu plus foncé -->
            </Style>

            <!-- TextBox avec le FOCUS (active, en train d'écrire) -->
            <Style Selector="TextBox:focus">
                <Setter Property="Background" Value="#e5e7eb"/>      <!-- garde le gris plus foncé -->
                <Setter Property="BorderBrush" Value="#3b82f6"/>     <!-- bord bleu -->
                <Setter Property="BorderThickness" Value="2"/>
            </Style>

          

        </UserControl.Styles>
        
        <UserControl.Resources>
            <!-- Couleurs normales -->
            <SolidColorBrush x:Key="ButtonBackground" Color="#3b82f6"/>
            <SolidColorBrush x:Key="ButtonForeground" Color="White"/>

            <!-- Couleurs au survol -->
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DarkBlue"/>
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Black"/>

            <!-- Couleurs quand pressé (optionnel) -->
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#e5e7eb"/>
            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Black"/>
        </UserControl.Resources>
  <Grid>
    <Border Background="White"
            CornerRadius="12"
            BorderThickness="2"
            BorderBrush="#3b82f6"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="400">

      <StackPanel Spacing="16">

        <TextBlock Text="Créer un compte"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="Black"/>

        <StackPanel>
          <TextBlock Text="Nom" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
          <TextBox Text="{Binding Nom}" MinWidth="260" Height="36" FontSize="14"
                   Background="#f9fafb" BorderBrush="#d1d5db" BorderThickness="1" CornerRadius="6"/>
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Prénom" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
          <TextBox Text="{Binding Prenom}" MinWidth="260" Height="36" FontSize="14"
                   Background="#f9fafb" BorderBrush="#d1d5db" BorderThickness="1" CornerRadius="6"/>
        </StackPanel>

        <StackPanel>
          <TextBlock Text="Email" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
          <TextBox Text="{Binding Email}" MinWidth="260" Height="36" FontSize="14"
                   Background="#f9fafb" BorderBrush="#d1d5db" BorderThickness="1" CornerRadius="6"/>
        </StackPanel>

        

        <TextBlock Text="{Binding Error}"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>

        <!-- Bouton S'inscrire -->
      <Button Content="S'inscrire"
        MinWidth="200"
        Height="36"
        FontWeight="Bold"
        CornerRadius="6"
        Command="{Binding RegisterCommand}"/>


        <!-- Lien vers Connexion -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="6">
            <Button Content="Annuler"
                    Command="{Binding GoBackCommand}"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

      </StackPanel>
    </Border>
  </Grid>
</UserControl>

