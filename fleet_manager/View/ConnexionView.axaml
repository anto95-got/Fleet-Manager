<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:FleetManager.ViewModels"
    x:Class="FleetManager.Views.ConnexionView"
    x:DataType="vm:ConnexionViewModel"
    Background="#f0f2f5">
    
    
    <UserControl.Styles>

        <!-- Style de base pour toutes les TextBox -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#f3f4f6"/>      <!-- gris clair -->
            <Setter Property="BorderBrush" Value="#d1d5db"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#111827"/>      <!-- texte presque noir -->
        </Style>

        <!-- TextBox au SURVOL -->
        <Style Selector="TextBox:pointerover">
            <Setter Property="Background" Value="#e5e7eb"/>      <!-- gris un peu plus foncé -->
        </Style>

        <!-- TextBox avec le FOCUS (active, en train d'écrire) -->
        <Style Selector="TextBox:focus">
            <Setter Property="Background" Value="#e5e7eb"/>      <!-- garde le gris plus foncé -->
            <Setter Property="BorderBrush" Value="#3b82f6"/>     <!-- bord bleu -->
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

          

    </UserControl.Styles>
    
    <UserControl.Resources>
        <!-- Couleurs normales -->
        <SolidColorBrush x:Key="ButtonBackground" Color="#3b82f6"/>
        <SolidColorBrush x:Key="ButtonForeground" Color="White"/>

        <!-- Couleurs au survol -->
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="DarkBlue"/>
        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="Black"/>

        <!-- Couleurs quand pressé (optionnel) -->
        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Black"/>
    </UserControl.Resources>

    <Grid>
    <Border Background="White"
            CornerRadius="12"
            BorderThickness="2"
            BorderBrush="#3b82f6"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="380">

      <StackPanel Spacing="16">

        <!-- Titre -->
        <TextBlock Text="Se connecter"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#111827"/>

        <!-- Email -->
        <StackPanel>
          <TextBlock Text="Email"
                     FontWeight="Bold"
                     FontSize="14"
                     Foreground="#374151"/>
          <TextBox
              Text="{Binding Email}"
              MinWidth="260" Height="36" FontSize="14"
              Background="#f9fafb" BorderBrush="#d1d5db" BorderThickness="1"
              CornerRadius="6"/>
        </StackPanel>

        <!-- Mot de passe -->
        <StackPanel>
          <TextBlock Text="Mot de passe"
                     FontWeight="Bold"
                     FontSize="14"
                     Foreground="#374151"/>
          <TextBox
              Text="{Binding Password}"
              PasswordChar="•"
              MinWidth="260" Height="36" FontSize="14"
              Background="#f9fafb" BorderBrush="#d1d5db" BorderThickness="1"
              CornerRadius="6"/>
        </StackPanel>

        <!-- Message d'erreur -->
        <TextBlock Text="{Binding Error}"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>

        <!-- Bouton Connexion -->
        <Button Content="Se connecter"
                Height="40"
                Background="#3b82f6"
                Foreground="White"
                FontWeight="Bold"
                CornerRadius="6"
                Command="{Binding LoginCommand}"/>

       

      </StackPanel>
    </Border>
  </Grid>
</UserControl>
